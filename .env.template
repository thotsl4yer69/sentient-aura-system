# Sentient Core v4 - API Configuration Template
# Copy this file to .env and fill in your API keys
# WARNING: Never commit .env to version control!

# ============================================================================
# LLM CONFIGURATION
# ============================================================================

# Ollama Configuration (Local LLM - Recommended)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_TIMEOUT=120

# Anthropic Claude API (Cloud - Optional)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=2048

# OpenAI API (Cloud - Optional)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2048

# Groq API (Cloud - Fast Inference - Optional)
GROQ_API_KEY=
GROQ_MODEL=llama-3.1-70b-versatile

# Google Gemini API (Cloud - Optional)
GOOGLE_API_KEY=
GOOGLE_MODEL=gemini-1.5-pro

# LLM Backend Priority (comma-separated)
# Options: ollama, anthropic, openai, groq, google
LLM_BACKEND_PRIORITY=ollama,anthropic,openai

# ============================================================================
# WEB SEARCH CONFIGURATION
# ============================================================================

# Brave Search API (Get key from: https://brave.com/search/api/)
BRAVE_API_KEY=
BRAVE_SEARCH_ENDPOINT=https://api.search.brave.com/res/v1/web/search

# ============================================================================
# WEATHER API CONFIGURATION
# ============================================================================

# OpenWeatherMap API (Get key from: https://openweathermap.org/api)
OPENWEATHER_API_KEY=
OPENWEATHER_UNITS=metric

# Weather.gov API (Free for US locations, no key required)
WEATHER_GOV_USER_AGENT=SentientCore/4.0 (contact@example.com)

# Default location (for weather queries)
DEFAULT_LATITUDE=
DEFAULT_LONGITUDE=
DEFAULT_LOCATION_NAME=

# ============================================================================
# NEWS & INFORMATION APIS
# ============================================================================

# NewsAPI (Get key from: https://newsapi.org/)
NEWS_API_KEY=
NEWS_API_COUNTRY=us
NEWS_API_LANGUAGE=en

# ============================================================================
# SMART HOME INTEGRATION
# ============================================================================

# Home Assistant Configuration
HOMEASSISTANT_URL=http://localhost:8123
HOMEASSISTANT_TOKEN=
HOMEASSISTANT_VERIFY_SSL=false

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL for conversation memory and analytics
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=sentient_core
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Database connection pool settings
POSTGRES_MIN_CONNECTIONS=2
POSTGRES_MAX_CONNECTIONS=10

# ============================================================================
# GITHUB INTEGRATION
# ============================================================================

# GitHub Personal Access Token (for repository queries)
GITHUB_TOKEN=

# ============================================================================
# API RATE LIMITING & CACHING
# ============================================================================

# Cache settings
API_CACHE_ENABLED=true
API_CACHE_TTL=300

# Rate limiting (requests per minute)
RATE_LIMIT_LLM=20
RATE_LIMIT_SEARCH=10
RATE_LIMIT_WEATHER=60
RATE_LIMIT_NEWS=30

# ============================================================================
# LOGGING & MONITORING
# ============================================================================

# API logging
API_LOG_REQUESTS=true
API_LOG_RESPONSES=false
API_LOG_ERRORS=true

# Cost tracking
TRACK_API_COSTS=true
COST_ALERT_THRESHOLD=10.0

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/disable specific API integrations
ENABLE_LLM_API=true
ENABLE_SEARCH_API=true
ENABLE_WEATHER_API=true
ENABLE_NEWS_API=true
ENABLE_HOMEASSISTANT_API=true
ENABLE_GITHUB_API=true
ENABLE_MEMORY_STORAGE=true

# Offline mode (graceful degradation)
OFFLINE_MODE=false

# ============================================================================
# ADVANCED SETTINGS
# ============================================================================

# LLM conversation context settings
LLM_CONTEXT_WINDOW=8
LLM_TEMPERATURE=0.7
LLM_STREAMING=true

# Search result limits
SEARCH_MAX_RESULTS=5
NEWS_MAX_ARTICLES=10

# Memory storage settings
MEMORY_AUTO_SUMMARIZE=true
MEMORY_RETENTION_DAYS=90
